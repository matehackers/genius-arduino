        <table>
            <tr>
                <td><a href="/press/0" class="expand" id="green"></a></td>
                <td><a href="/press/1" class="expand" id="red"></a></td>
            </tr>
            <tr>
                <td><a href="/press/2" class="expand" id="yellow"></a></td>
                <td><a href="/press/3" class="expand" id="blue"></a></td>
            </tr>
        </table>
