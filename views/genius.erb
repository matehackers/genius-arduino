    <head>
        <title>Genius Web</title>
        <style>
        table
        {
            width: 100%;
            height: 100%;
        }
        a
        {
            text-decoration : none;
        }

        .expand
        {
            width: 100%;
            height: 100%;
            display: block;
        }
        #green
        {
            color: white;
            background-color: green;
        }

        #blue
        {
            color: white;
            background-color: blue;
        }

        #yellow
        {
            color: white;
            background-color: yellow;
        }

        #red
        {
            color: white;
            background-color: red;
        }

        #red:active
        {
            background-color: black;
        }

        #green:active
        {
            background-color: black;
        }
        #yellow:active
        {
            background-color: black;
        }
        #blue:active
        {
            background-color: black;
        }

